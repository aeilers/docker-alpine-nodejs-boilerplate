{
  "name": "docker-nodejs-starter",
  "version": "1.0.0",
  "description": "Starter kit for server-side Node.js w/ Koa2 implementations in Docker",
  "main": "./bin/start",
  "scripts": {
    "prebuild": "del dist",
    "build": "babel src --out-dir dist",
    "coverage": "NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "nodemon -e js,json -w src -w conf -x \"npm run start:dev\" & nodemon -e js -w tst -x \"npm test\"",
    "fix": "standard --fix",
    "release": "NODE_ENV=production npm test && npm run build && node ./bin/compress",
    "start": "NODE_ENV=production node ./bin/start",
    "start:dev": "NODE_ENV=development npm run build && node ./bin/start",
    "pretest": "del coverage coverage.lcov .nyc_output",
    "test": "standard",
    "posttest": "NODE_ENV=test nyc --reporter=html --reporter=text mocha tst --recursive --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aeilers/docker-nodejs-starter.git"
  },
  "bugs": {
    "url": "https://github.com/aeilers/docker-nodejs-starter/issues"
  },
  "homepage": "https://github.com/aeilers/docker-nodejs-starter#readme",
  "author": "Adam Eilers <adam.eilers@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "dependencies": {
    "kcors": "~2.2.0",
    "koa": "~2.3.0",
    "koa-bodyparser": "~4.2.0",
    "koa-helmet": "~3.2.0",
    "koa-logger": "~3.1.0",
    "koa-router": "~7.2.1"
  },
  "devDependencies": {
    "archiver": "~2.0.3",
    "babel-cli": "~6.26.0",
    "babel-core": "~6.26.0",
    "babel-eslint": "~8.0.1",
    "babel-plugin-add-module-exports": "~0.2.1",
    "babel-plugin-istanbul": "~4.1.5",
    "babel-plugin-transform-es2015-modules-commonjs": "~6.26.0",
    "babel-register": "~6.26.0",
    "chai": "~4.1.2",
    "chai-as-promised": "~7.1.1",
    "codecov": "~2.3.0",
    "del-cli": "~1.1.0",
    "dirty-chai": "~2.0.1",
    "mocha": "~4.0.1",
    "node-mocks-http": "^1.6.6",
    "nodemon": "~1.12.1",
    "nyc": "~11.2.1",
    "proxyquire": "~1.8.0",
    "sinon": "~4.0.0",
    "standard": "~10.0.3",
    "supertest": "~3.0.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "watermarks": {
      "lines": [
        80,
        90
      ],
      "functions": [
        80,
        90
      ],
      "branches": [
        80,
        90
      ],
      "statements": [
        80,
        90
      ]
    },
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
